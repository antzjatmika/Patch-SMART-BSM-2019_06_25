@model MVCSmartClient01.Models.RegisterBindingModel
@{
    ViewBag.Title = "Register";
}

<h2>Registrasi</h2>
<script type="text/javascript" src="~/Scripts/SmartApps.js"></script>
@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Pendaftaran Rekanan Baru</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.NamaRekanan, "Nama Rekanan", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.NamaRekanan, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.NomorNPWP, "Nomor NPWP", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.NomorNPWP, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email, "Alamat Email", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email, "Jenis Rekanan", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(x => x.IdTypeOfRekanan, new SelectList(Model.TypeOfRekananColls, "IdTypeOfRekanan", "Name"), "-- Pilih Tipe Rekanan --")
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Daftar" />
        </div>
    </div>

