@model MVCSmartClient01.Models.RegisterBindingModel
@{
    ViewBag.Title = "Register";
}
<head>
    <link href="@Url.Content("../../Content/RegisterKiosk.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("../../Content/select2.min.css")" rel="stylesheet" type="text/css" />
    <meta name="viewport" content="width=device-width" />
    <title>Login Page</title>
</head>
<script type="text/javascript" src="~/Scripts/SmartApps.js"></script>
@using (Html.BeginForm("RegisterByKiosk", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="bg-contact3" style="background-image: url('images/bg-01.jpg');">
        <div class="container-contact3">
            <div class="wrap-contact3">
                <form class="contact3-form validate-form">
                    <span class="contact3-form-title">
                        Pendaftaran Calon Rekanan
                    </span>

                    <div class="wrap-input3 validate-input" data-validate="Name is required">
                        @Html.TextBoxFor(m => m.NamaRekanan, new { @class = "input3", @placeholder = "Nama Rekanan"})
                        @*<input class="input3" type="text" name="name" placeholder="Nama Rekanan">*@
                        <span class="focus-input3"></span>
                    </div>

                    <div class="wrap-input3 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                        @Html.TextBoxFor(m => m.Email, new { @class = "input3", @placeholder = "Alamat Email" })
                        @*<input class="input3" type="text" name="email" placeholder="Alamat Email">*@
                        <span class="focus-input3"></span>
                    </div>

                    <div class="wrap-input3 input3-select">
                        <div>
                            @Html.DropDownListFor(x => x.IdTypeOfRekanan, new SelectList(Model.TypeOfRekananColls, "IdTypeOfRekanan", "Name")
, new { style = "width: 390px; background-color: transparent; font-color: white" })
                            @*<select class="selection-2" name="service">
                                <option>Jenis Rekanan</option>
                                <option>Kantor Jasa Penilai Publik</option>
                                <option>Kantor Akuntan Publik</option>
                                <option>Konsultan Managemen</option>
                                <option>Asuransi Jiwa</option>
                                <option>Asurnasi Kerugian</option>
                                <option>Balai Lelang</option>
                                <option>Notaris</option>
                            </select>*@
                        </div>
                        <span class="focus-input3"></span>
                    </div>

                    <div class="container-contact3-form-btn">
                        <button class="contact3-form-btn">
                            Submit
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div id="dropDownSelect1"></div>

}
<script src="vendor/select2/select2.min.js"></script>
<script>
    $(".selection-2").select2({
        minimumResultsForSearch: 20,
        dropdownParent: $('#dropDownSelect1')
    });
</script>
